<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teammotoyori.motoyori_app.SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key"
        android:id="@+id/keytext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/keyaddtext"
        android:inputType="text"
        android:maxLength="40"
        android:layout_below="@+id/keytext"
        android:layout_alignLeft="@+id/keytext"
        android:layout_alignStart="@+id/keytext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="追加"
        android:id="@+id/addbutton"
        android:layout_below="@+id/valueaddtext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value"
        android:id="@+id/valuetext"
        android:layout_below="@+id/keyaddtext"
        android:layout_alignLeft="@+id/keyaddtext"
        android:layout_alignStart="@+id/keyaddtext"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/valueaddtext"
        android:inputType="text"
        android:maxLength="100"
        android:layout_below="@+id/valuetext"
        android:layout_alignLeft="@+id/valuetext"
        android:layout_alignStart="@+id/valuetext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key"
        android:id="@+id/keytext2"
        android:layout_below="@+id/addbutton"
        android:layout_alignLeft="@+id/valueaddtext"
        android:layout_alignStart="@+id/valueaddtext"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/keydeletetext"
        android:inputType="text"
        android:maxLength="40"
        android:layout_below="@+id/keytext2"
        android:layout_alignLeft="@+id/keytext2"
        android:layout_alignStart="@+id/keytext2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="削除"
        android:id="@+id/deletebutton"
        android:layout_below="@+id/keydeletetext"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一覧表示"
        android:id="@+id/ichiranbutton"
        android:layout_below="@+id/deletebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初期化"
        android:id="@+id/defaultbutton"
        android:layout_alignTop="@+id/ichiranbutton"
        android:layout_toRightOf="@+id/ichiranbutton"
        android:layout_toEndOf="@+id/ichiranbutton" />
</RelativeLayout>
